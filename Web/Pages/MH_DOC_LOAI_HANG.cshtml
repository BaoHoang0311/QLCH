@page  "/Loai-Hang"
@model Web.Pages.MH_DOC_LOAI_HANGModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <title>Loại Hàng</title>
</head>

<body>
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>

    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <p class="nav-item">
            <a class="nav-link text-white bg-primary mr-1" asp-area="" asp-page="//MH_THEM_LOAI_HANG">Thêm Loại Hàng</a>
        </p>
    </div>

    <form method="POST">
        <label>Từ khóa</label><br />
        <input type="text" name="tu_khoa" placeholder="nhập từ khóa để tìm kiếm" value="@Model.tu_khoa" />
        <input type="submit" value="Tìm kiếm" /><br />
    </form>

    <h2>LOẠI HÀNG</h2>
    <table>
        <tr>
            <th>Mã hàng</th>
            <th>Tên Loại Hàng</th>
            <th>Xóa Sửa</th>
        </tr>

        @for (int i = 0; i < Model.ds_loai_hang.Count; i++)
        {
            <tr>
                <td>@Model.ds_loai_hang[i].Ma_hang</td>
                <td>@Model.ds_loai_hang[i].Ten_loai_hang</td>
                <td>
                    <a href="/MH_SUA_LOAI_HANG?Pid=@Model.ds_loai_hang[i].Ma_hang">Sửa loại hàng</a>
                    <a href="/MH_XOA_LOAI_HANG?Pid=@Model.ds_loai_hang[i].Ma_hang">Xóa loại hàng</a>
                </td>
            </tr>
        }
    </table>
</body>
</html>